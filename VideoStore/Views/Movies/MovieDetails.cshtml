@model VideoStore.Models.Movie

@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Details</h2>

<table class="table table-dark">
    <thead>
        <tr><th >Film</th>
        <th >Ganre</th>
        <th >Released Date</th>
        <th >Date Added</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.Ganre.Name</td>
            <td>@Model.DateReleased</td>
            <td>@Model.DateAdded</td>
        </tr>
    </tbody>
</table>

